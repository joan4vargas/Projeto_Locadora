<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="https://jakarta.ee/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="https://jakarta.ee/xml/ns/persistence
             https://jakarta.ee/xml/ns/persistence/persistence_3_0.xsd"
             version="3.0">

    <persistence-unit name="locadoraPU" transaction-type="RESOURCE_LOCAL">

        <!-- PROVEDOR JPA -->
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <!-- ENTIDADES -->
        <class>com.locadora.model.Usuario</class>
        <class>com.locadora.model.Veiculo</class>
        <class>com.locadora.model.Aluguel</class>

        <!-- CONFIGURAÇÕES DO HIBERNATE -->
        <properties>

            <!-- BANCO H2 EM ARQUIVO (persistente) -->
            <property name="jakarta.persistence.jdbc.url"
                      value="jdbc:h2:file:./database/locadora;AUTO_SERVER=TRUE"/>

            <property name="jakarta.persistence.jdbc.driver"
                      value="org.h2.Driver"/>

            <property name="jakarta.persistence.jdbc.user" value="sa"/>
            <property name="jakarta.persistence.jdbc.password" value=""/>

            <!-- HIBERNATE CONFIG -->
            <property name="hibernate.hbm2ddl.auto" value="update"/>
            <property name="hibernate.format_sql" value="true"/>
            <property name="hibernate.show_sql" value="false"/>

            <!-- Dialeto correto para H2 -->
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.H2Dialect"/>

        </properties>
    </persistence-unit>
</persistence>
